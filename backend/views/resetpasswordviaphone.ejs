<!doctype html>
<html>
<head>
    <title>welcome to BlimpIt</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
    <div class="col-sm-6 col-sm-offset-3">

        <h1><span class="fa fa-sign-in"></span> Verify Your Phone</h1>

        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->
        <form action="/ispassresettingallowed" method="post">
            <div class="form-group">
                <label>Phone Number</label>
                <input type="text" class="form-control" name="phonenumber">
            </div>
            <div class="form-group">
                <label>Verification Code</label>
                <input type="text" class="form-control" name="code">
            </div>
            <button type="submit" class="btn btn-warning btn-lg">Verify</button>
        </form>

        <hr>

        <p>Already have an account? <a href="/login">Login</a></p>
        <p>Resend verification code? <a href="/resendpass">Login</a></p>
        <p>Or go <a href="/">home</a>.</p>



    </div>
</div>
</body>
</html>
